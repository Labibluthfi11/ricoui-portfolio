---
const socialData = [
  {
    name: "Github",
    url: "https://github.com/Labibluthfi11",
    username: "labibluthfi",
    // INI DIA! Kita panggil file foto lokal kamu
    image: "public/assets/social/social-github.jpg", 
  },
  {
    name: "Instagram",
    url: "https://www.instagram.com/m_labibl_11?igsh=cTRlNnVkZ21jb3h0",
    username: "@m_labibl_11",
    image: "public/assets/social/logo-ig.jpg",
  },
  {
    name: "WhatsApp",
    url: "https://wa.me/6285891096731",
    username: "Chat Me",
    image: "public/assets/social/logo-whatsapp.jpg",
  }
];
---

<div class="social-cards-wrapper">
  <div class="social-list">
    {socialData.map((item, index) => (
      <a
        href={item.url}
        target="_blank"
        rel="noopener noreferrer"
        class="social-item"
        style={`--index: ${index}; --total: ${socialData.length};`}
      >
        {item.image ? (
          <img src={item.image} alt={item.name} class="social-image" />
        ) : (
          <div class="social-bg" style={`background: ${item.color};`}></div>
        )}
        
        <div class="social-info">
          <div class="social-username">
            {item.username}
          </div>
        </div>
      </a>
    ))}
  </div>
</div>

<style>
  .social-cards-wrapper {
    position: relative;
    width: 100%;
    min-height: 80px; 
  }

  .social-list {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    height: 70px;
  }

  @media (max-width: 768px) {
    .social-list {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      height: auto;
      justify-content: flex-start;
    }
  }

  .social-item {
    position: relative;
    overflow: hidden;
    border-radius: 0.75rem;
    cursor: pointer;
    transition: transform 0.6s cubic-bezier(0.34, 1.2, 0.64, 1),
                z-index 0s linear 0.6s,
                box-shadow 0.3s ease;
    transition-delay: calc(var(--index) * 0.03s);
    width: 72px;
    height: 72px;
    background: #1a1a1a;
  }

  /* STYLE UNTUK FOTO (GITHUB) */
  .social-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  .social-item:hover .social-image {
    transform: scale(1.15);
  }

  /* STYLE UNTUK GRADASI (IG & WA) */
  .social-bg {
    width: 100%;
    height: 100%;
    transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  .social-item:hover .social-bg {
    transform: scale(1.15);
  }

  /* EFEK TUMPUK (DESKTOP) */
  @media (min-width: 769px) {
    .social-item {
      position: absolute;
      left: 0;
      transform: translateX(calc(var(--index) * 3px)) rotate(calc(var(--index) * 5deg));
      z-index: calc(var(--total) - var(--index));
    }

    .social-list:hover .social-item {
      transform: translateX(calc(var(--index) * 85px)) rotate(0deg);
      z-index: calc(var(--index) + 100);
      transition: transform 0.6s cubic-bezier(0.34, 1.2, 0.64, 1),
                  z-index 0s linear 0s,
                  box-shadow 0.3s ease;
      transition-delay: calc(var(--index) * 0.03s);
    }

    .social-list:hover .social-item:hover {
      transform: translateX(calc(var(--index) * 80px)) translateY(-10px) rotate(-6deg) scale(1.05);
      z-index: 9999;
      transition: transform 0.35s cubic-bezier(0.34, 1.5, 0.64, 1),
                  z-index 0s linear 0s,
                  box-shadow 0.3s ease;
    }
  }

  @media (max-width: 768px) {
    .social-item {
      position: relative;
      transform: none;
      transition-delay: 0s;
    }
  }

  .social-info {
    position: absolute;
    bottom: 6px;
    left: 6px;
    z-index: 10;
  }

  .social-username {
    font-size: 8px;
    color: white;
    font-weight: bold;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.8);
  }
</style>